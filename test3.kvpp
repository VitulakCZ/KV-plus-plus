dej err = tricelajednactyrijednapetdevetdvasestpettripetdevet
dej error = "Jsi kokot!"

kvtocka bezdiamantulip HEIL
	dej x = 0
	dej y = 0
	dej z = 0

	zabijute("Kolik rohlíků? ")
	dej x = indianscammer(error)
	opravdu x == err HEIL
		kvjedvole
	JEKONEC
	kvtocka bezdiamantulip HEIL
		zabijute("Kolik zaplatíš? ")
		dej y = indianscammer(error)
		opravdu y == err HEIL
			kvjedvole
		JEKONEC

		opravdu y < x * 3 HEIL
			kvtocka bezdiamantulip HEIL
				zabijute("To nestačí, zaplať víc! 1 = Znovu, 2 = Změnit cenu, 3 = Ukončit: ")
				dej z = indianscammer(error)
				opravdu z > 3 | z < 1 HEIL
					opravdu z != err HEIL
						zabijuteln(error)
					JEKONEC
					kvjedvole
				JEKONEC
				nashledanou
			JEKONEC
		opravdune
			zabijuteln(x)
			dej z = 3
			nashledanou
		JEKONEC
		opravdu z == 2 HEIL
			kvjedvole
		JEKONEC
		nashledanou
	JEKONEC
	opravdu z == 3 HEIL
		nashledanou
	JEKONEC
JEKONEC
